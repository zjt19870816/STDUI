<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light"
        >
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:icon">@drawable/icon</item>
        <item name="android:windowContentOverlay">@drawable/abs__ab_solid_shadow</item>
        <item name="android:listSelector">@drawable/list_item_bg</item>
        <item name="android:actionBarStyle">@style/Widget.Ledongli.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_light</item>
        <item name="android:selectableItemBackground">@drawable/list_item_bg</item>
    </style>
    
    <style name="Widget.Ledongli.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#ffffffff</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
    </style>
<style name="tab_rb_style">
        <item name="android:layout_width" >0dp</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:layout_weight" >1</item>
        <item name="android:button" >@null</item>
        <item name="android:textColor" >@color/tab_selector_tv_color</item>
        <item name="android:gravity" >center_horizontal|bottom</item>
        <item name="android:layout_gravity" >bottom</item>
        <item name="android:background">@drawable/tab_selector_checked_bg</item>
    </style>
    
<style name="IndeterminateProgress" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">32.0dip</item>
        <item name="android:maxHeight">32.0dip</item>
        <item name="android:indeterminateDrawable">@anim/cloud_progress</item>
        <item name="android:minWidth">32.0dip</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:height">32.0dip</item>
        <item name="android:width">32.0dip</item>
    </style>
    
<!-- 宽度和屏幕宽度一样 高度自适应 -->
    <style name="w_full_h_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
    <style
        name="left_radio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:background">@drawable/bg_left_table</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/tab_left_tv_color</item>
        <item name="android:textSize">18sp</item>
        </style>
        
    <declare-styleable name="ImgListView">
        <attr name="headimage" format="reference|color" />
    </declare-styleable>
</resources>